{
    "manifest_version": 3,
    "name": "Focus Timer - Pomodoro",
    "version": "1.0.1",
    "description": "Focus Timer app to help you focus and work efficiently",
    "author": "Hoàng Mạnh Cường lhoangcuong1996@gmail.com",
    "permissions": [
      "notifications",
      "storage",
      "alarms",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback",
      "contextMenus"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "chrome_url_overrides": {
      "newtab": "index.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }